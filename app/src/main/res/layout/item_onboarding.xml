<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:gravity="center"
    android:padding="@dimen/_20sdp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageOnboarding"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_170sdp"
        android:contentDescription="@null"
        android:src="@color/black" />

    <TextView
        android:id="@+id/titleOnboarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_35sdp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:letterSpacing="@dimen/letter_spacing_default"
        android:textColor="@color/main_header"
        android:textSize="@dimen/_15sdp"
        tools:text="@string/welcome_to_the_crewl" />

    <TextView
        android:id="@+id/descriptionOnboarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:letterSpacing="@dimen/letter_spacing_default"
        android:lineSpacingExtra="@dimen/_5sdp"
        android:textColor="@color/main_subtitle"
        android:textSize="@dimen/_11sdp"
        tools:text="@string/best_pub_event_in_town" />

</LinearLayout>
